%h1 Sign Up

.user_signup
  = form_for @user do |f|
    .name
      = f.label :first_name
      = f.text_field :first_name, autofocus: true
      = f.label :last_name
      = f.text_field :last_name, autofocus: true
    .email
      = f.label :email
      = f.text_field :email
    .password
      = f.label :password
      = f.password_field :password
    .password_confirmation
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    .submit
      = f.submit "Sign up!"
